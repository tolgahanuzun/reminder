{
  "name": "Reminder",
  "description" : "Browser Reminder...",
  "version": "0.2",
  "browser_action": {
    "default_popup": "app/index.html"
  },
  "manifest_version": 2,
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens index.html"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "contextMenus",
    "https://*/*",
    "http://*/*"
  ]
}
